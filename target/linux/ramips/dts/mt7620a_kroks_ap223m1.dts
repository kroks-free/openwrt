#include "mt7620a_kroks.dtsi"
#include "flash_kroks_16m.dtsi"

#include <dt-bindings/input/input.h>
#include <dt-bindings/gpio/gpio.h>

/ {
	compatible = "kroks,ap223m1", "ralink,mt7620a-soc";
	model = "Kroks AP223M1";

	aliases {
		led-boot = &led_power;
		led-failsafe = &led_power;
		led-running = &led_power;
		led-upgrade = &led_power;
	};

	leds {
		compatible = "gpio-leds";

		led_power: power {
			label = "ap223m1:led:power";
			gpios = <&gpio0 9 GPIO_ACTIVE_LOW>;
		};

		wan {
			label = "ap223m1:led:wan";
			gpios = <&gpio0 14 GPIO_ACTIVE_LOW>;
		};

		wan_data {
			label = "ap223m1:led:wan_data";
			gpios = <&gpio0 11 GPIO_ACTIVE_LOW>;
		};

		lan1 {
			label = "ap223m1:led:lan1";
			gpios = <&gpio2 21 GPIO_ACTIVE_LOW>;
		};

		lan1_data {
			label = "ap223m1:led:lan1_data";
			gpios = <&gpio2 22 GPIO_ACTIVE_LOW>;
		};

		lan2 {
			label = "ap223m1:led:lan2";
			gpios = <&gpio2 23 GPIO_ACTIVE_LOW>;
		};

		lan2_data {
			label = "ap223m1:led:lan2_data";
			gpios = <&gpio0 22 GPIO_ACTIVE_LOW>;
		};

		wifi {
			label = "ap223m1:led:wifi";
			gpios = <&gpio3 0 GPIO_ACTIVE_LOW>;
			linux,default-trigger = "phy0tpt";
		};
	};

	keys {
		compatible = "gpio-keys";

		reset {
			label = "reset";
			gpios = <&gpio0 0 GPIO_ACTIVE_HIGH>;
			linux,code = <KEY_RESTART>;
		};
	};
};

&state_default {
	gpio {
		ralink,group = "uartf", "mdio", "rgmii2", "wled";
		ralink,function = "gpio";
	};
};

&ethernet {
	mediatek,portmap = "wllll";
};
