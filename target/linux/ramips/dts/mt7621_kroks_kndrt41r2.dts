#include "mt7621_kroks.dtsi"

/ {
	compatible = "kroks,kndrt41r2", "mediatek,mt7621-soc";
	model = "Kroks KNdRt41R2";

	aliases {
		led-boot = &led_status;
		led-failsafe = &led_status;
		led-running = &led_status;
		led-upgrade = &led_status;
		serial1 = &uartlite2;
	};

	leds {
		compatible = "gpio-leds";

		led_status: status {
			label = "led:status";
			gpios = <&gpio 6 GPIO_ACTIVE_LOW>;
		};

		wifi2 {
			label = "led:wifi2";
			gpios = <&gpio 13 GPIO_ACTIVE_LOW>;
			linux,default-trigger = "phy0tpt";
		};

		wifi5 {
			label = "led:wifi5";
			gpios = <&gpio 15 GPIO_ACTIVE_LOW>;
			linux,default-trigger = "phy1tpt";
		};
	};

	gpio_export {
		compatible = "gpio-export";
		#size-cells = <0>;

		modem1power {
			gpio-export,name = "modem1power";
			gpio-export,output = <1>;
			gpios = <&gpio 5 GPIO_ACTIVE_HIGH>;
		};

		modem1sim1 {
			gpio-export,name = "modem1sim1";
			gpio-export,output = <0>;
			gpios = <&gpio 17 GPIO_ACTIVE_HIGH>;
		};

		modem1sim2 {
			gpio-export,name = "modem1sim2";
			gpio-export,output = <0>;
			gpios = <&gpio 7 GPIO_ACTIVE_HIGH>;
		};

		modem1rsim1 {
			gpio-export,name = "modem1rsim1";
			gpio-export,output = <1>;
			gpios = <&gpio 14 GPIO_ACTIVE_HIGH>;
		};

		modem1rsim2 {
			gpio-export,name = "modem1rsim2";
			gpio-export,output = <0>;
			gpios = <&gpio 16 GPIO_ACTIVE_HIGH>;
		};
	};
};

&uartlite2 {
	status = "okay";
};

&switch0 {
	ports {
		port@3 {
			status = "okay";
			label = "lan2";
		};

		port@4 {
			status = "okay";
			label = "lan1";
		};
	};
};

&state_default {
	gpio {
		groups = "jtag", "uart3";
		function = "gpio";
	};
};
